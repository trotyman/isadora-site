{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' https://web3forms.com; style-src 'self' 'unsafe-inline' https://fonts.cdnfonts.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.cdnfonts.com https://cdnjs.cloudflare.com data:; img-src 'self' data: https:; connect-src 'self' https://api.web3forms.com; frame-ancestors 'none';"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=(), interest-cohort=()"
        }
      ]
    }
  ],
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/auth/login",
      "destination": "/api/auth/login"
    },
    {
      "source": "/api/auth/me",
      "destination": "/api/auth/me"
    },
    {
      "source": "/api/auth/password",
      "destination": "/api/auth/password"
    },
    {
      "source": "/api/projects/categories",
      "destination": "/api/projects/categories"
    },
    {
      "source": "/api/projects/admin/all",
      "destination": "/api/projects/admin/all"
    },
    {
      "source": "/api/projects/admin/stats",
      "destination": "/api/projects/admin/stats"
    },
    {
      "source": "/api/projects/admin/order",
      "destination": "/api/projects/admin/order"
    },
    {
      "source": "/api/projects/:id/files/:fileId",
      "destination": "/api/projects/[id]/files/[fileId]"
    },
    {
      "source": "/api/projects/:id/files",
      "destination": "/api/projects/[id]/files"
    },
    {
      "source": "/api/projects/:id/cover/:fileId",
      "destination": "/api/projects/[id]/cover/[fileId]"
    },
    {
      "source": "/api/projects/:id",
      "destination": "/api/projects/[id]"
    },
    {
      "source": "/api/projects",
      "destination": "/api/projects/index"
    },
    {
      "source": "/api/health",
      "destination": "/api/health"
    }
  ]
}
